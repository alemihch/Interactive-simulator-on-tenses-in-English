                { sentence: "This time next year, I ___ on a beach.", options: ["lie", "will be lying", "am lying"], correct: "will be lying" },
                { sentence: "She ___ not be studying when you arrive.", options: ["will", "won't", "isn't"], correct: "won't" },
                { sentence: "___ you be watching TV tonight?", options: ["Will", "Are", "Do"], correct: "Will" },
                { sentence: "They ___ dinner at 7 PM.", options: ["will eat", "will be eating", "are eating"], correct: "will be eating" },
                { sentence: "He ___ in the garden all afternoon.", options: ["will work", "will be working", "is working"], correct: "will be working" },
                { sentence: "We ___ a meeting at this time tomorrow.", options: ["have", "will be having", "are having"], correct: "will be having" },
                { sentence: "She ___ not be waiting for us.", options: ["will", "won't", "isn't"], correct: "won't" },
                { sentence: "What ___ you be doing this weekend?", options: ["will", "are", "do"], correct: "will" },
                { sentence: "I ___ home by midnight.", options: ["will drive", "will be driving", "am driving"], correct: "will be driving" }
            ],
            fp: [ // Future Perfect
                { sentence: "By next year, I ___.", options: ["graduate", "will have graduated", "will graduate"], correct: "will have graduated" },
                { sentence: "By 5 PM, she ___ her report.", options: ["finish", "will have finished", "will finish"], correct: "will have finished" },
                { sentence: "They ___ not have arrived by midnight.", options: ["will", "won't", "don't"], correct: "won't" },
                { sentence: "___ you have completed the task by Friday?", options: ["Will", "Have", "Are"], correct: "Will" },
                { sentence: "He ___ the book by next month.", options: ["read", "will have read", "will read"], correct: "will have read" },
                { sentence: "By the time you get home, I ___ dinner.", options: ["will cook", "will have cooked", "am cooking"], correct: "will have cooked" },
                { sentence: "We ___ the project by the deadline.", options: ["will finish", "will have finished", "are finishing"], correct: "will have finished" },
                { sentence: "She ___ not have left by then.", options: ["will", "won't", "isn't"], correct: "won't" },
                { sentence: "How many books ___ you have read by the end of the year?", options: ["will", "do", "are"], correct: "will" },
                { sentence: "The train ___ already left by the time we arrive.", options: ["will", "will have", "is"], correct: "will have" }
            ],
            fpc: [ // Future Perfect Continuous
                { sentence: "By midnight, I ___ for five hours.", options: ["write", "will have been writing", "will write"], correct: "will have been writing" },
                { sentence: "By next month, he ___ for ten years.", options: ["will be working", "will have been working", "has been working"], correct: "will have been working" },
                { sentence: "She ___ not have been waiting long when you arrive.", options: ["will", "won't", "isn't"], correct: "won't" },
                { sentence: "How long ___ you have been learning by the time you graduate?", options: ["will", "have", "are"], correct: "will" },
                { sentence: "By 2030, we ___ in this house for twenty years.", options: ["will live", "will have been living", "are living"], correct: "will have been living" },
                { sentence: "They ___ by the time you get there.", options: ["will still be arguing", "will have been arguing", "are arguing"], correct: "will have been arguing" },
                { sentence: "I ___ this report for three days by Friday.", options: ["will write", "will have been writing", "am writing"], correct: "will have been writing" },
                { sentence: "He ___ not have been running for two hours by then.", options: ["will", "won't", "isn't"], correct: "won't" },
                { sentence: "They ___ for a long time when the news finally comes.", options: ["will wait", "will have been waiting", "are waiting"], correct: "will have been waiting" },
                { sentence: "By the end of the month, she ___ for this company for five years.", options: ["will work", "will have been working", "works"], correct: "will have been working" }
            ]
        };

        let currentScores = {};

        document.addEventListener('DOMContentLoaded', function() {
            const allTabsContainers = document.querySelectorAll('.tabs');

            allTabsContainers.forEach(tabsContainer => {
                const tenseId = tabsContainer.dataset.tense;
                currentScores[tenseId] = { correct: 0, total: 0 };

                const tabButtons = tabsContainer.querySelectorAll('.tab-btn');
                const tabContents = tabsContainer.querySelectorAll('.tab-content');
                const exerciseArea = tabsContainer.querySelector(`.exercise-area[data-tense="${tenseId}"]`);
                const resultArea = tabsContainer.querySelector(`[data-result-area="${tenseId}"]`);
                const resetButton = resultArea.querySelector('.reset-button');

                tabButtons.forEach(button => {
                    button.addEventListener('click', () => {
                        const tabName = button.dataset.tab;

                        tabButtons.forEach(btn => btn.classList.remove('active'));
                        button.classList.add('active');

                        tabContents.forEach(content => {
                            if (content.dataset.tabContent === tabName) {
                                content.classList.remove('hidden');
                                if (tabName === 'trainer') {
                                    renderExercises(tenseId, exerciseArea, resultArea);
                                }
                            } else {
                                content.classList.add('hidden');
                            }
                        });
                    });
                });

                resetButton.addEventListener('click', () => {
                    resetExercise(tenseId, exerciseArea, resultArea);
                });
            });
            
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                });
            });
        });

        function renderExercises(tenseId, exerciseArea, resultArea) {
            exerciseArea.innerHTML = '';
            resultArea.classList.add('hidden');
            currentScores[tenseId] = { correct: 0, total: 0 };

            if (!exercises[tenseId] || exercises[tenseId].length === 0) {
                exerciseArea.innerHTML = '<p class="text-[#6E6E6E]">Упражнения для этого времени пока не добавлены.</p>';
                return;
            }

            exercises[tenseId].forEach((exercise, index) => {
                const questionDiv = document.createElement('div');
                questionDiv.classList.add('mb-4', 'p-4', 'border', 'border-[#A69B8F]/30', 'rounded-md', 'bg-gray-50');
                questionDiv.innerHTML = `
                    <p class="font-semibold mb-3">${index + 1}. ${exercise.sentence.replace('___', '<span class="text-[#E6A473]">___</span>')}</p>
                    <div class="options space-y-2">
                        ${exercise.options.map((option, optIndex) => `
                            <label class="block cursor-pointer hover:bg-gray-100 p-2 rounded-md transition-colors">
                                <input type="radio" name="q${tenseId}-${index}" value="${option}" class="mr-2 accent-[#E6A473]">
                                ${option}
                            </label>
                        `).join('')}
                    </div>
                    <div class="feedback mt-2 text-sm"></div>
                `;
                exerciseArea.appendChild(questionDiv);
            });

            const checkButton = document.createElement('button');
            checkButton.classList.add('bg-[#E6A473]', 'text-white', 'py-2', 'px-4', 'rounded-md', 'hover:bg-[#D59463]', 'transition-colors', 'block', 'w-full', 'mt-4');
            checkButton.textContent = 'Проверить ответы';
            checkButton.addEventListener('click', () => checkAnswers(tenseId, exerciseArea, resultArea));
            exerciseArea.appendChild(checkButton);
        }

        function checkAnswers(tenseId, exerciseArea, resultArea) {
            let correctCount = 0;
            let totalCount = 0;

            exercises[tenseId].forEach((exercise, index) => {
                const questionDiv = exerciseArea.children[index];
                const selectedOption = questionDiv.querySelector(`input[name="q${tenseId}-${index}"]:checked`);
                const feedbackDiv = questionDiv.querySelector('.feedback');
                const optionsDiv = questionDiv.querySelector('.options');
                
                optionsDiv.querySelectorAll('input').forEach(input => input.disabled = true); // Disable inputs after check

                if (selectedOption) {
                    totalCount++;
                    if (selectedOption.value === exercise.correct) {
                        feedbackDiv.innerHTML = '<span class="correct-answer">&#10003; Правильно!</span>';
                        correctCount++;
                    } else {
                        feedbackDiv.innerHTML = `<span class="wrong-answer">&#10007; Неправильно. Правильный ответ: ${exercise.correct}</span>`;
                    }
                } else {
                    feedbackDiv.innerHTML = '<span class="wrong-answer">&#10007; Выберите ответ. Правильный ответ: ' + exercise.correct + '</span>';
                }
            });

            currentScores[tenseId].correct = correctCount;
            currentScores[tenseId].total = totalCount;
            updateResultArea(tenseId, resultArea);
            resultArea.classList.remove('hidden');
            exerciseArea.querySelector('button').classList.add('hidden'); // Hide check button after showing results
        }

        function updateResultArea(tenseId, resultArea) {
            resultArea.querySelector('.correct-count').textContent = currentScores[tenseId].correct;
            resultArea.querySelector('.total-count').textContent = currentScores[tenseId].total;
        }

        function resetExercise(tenseId, exerciseArea, resultArea) {
            renderExercises(tenseId, exerciseArea, resultArea);
        }
    </script>
</body>
</html>
